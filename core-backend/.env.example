# Core Backend Environment Variables
# Copy this file to .env and fill in your values

# Database
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tochkarosta_core

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_TTL_MINUTES=15
JWT_REFRESH_TOKEN_TTL_DAYS=30

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Pool Configuration
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=10

# CORS Configuration
CORS_ORIGINS=http://localhost:7000,http://localhost:7001,http://localhost:7002,http://localhost:3000

# Environment
ENVIRONMENT=development

# Redis (Optional - for verification codes and webhook idempotency)
# If not set, uses in-memory storage (dev mode)
# REDIS_URL=redis://localhost:6379/0

# HTTP Retry Configuration
# Enable/disable retry logic for HTTP requests between services
HTTP_RETRY_ENABLED=true
