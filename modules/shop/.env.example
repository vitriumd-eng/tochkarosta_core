# Shop Module Environment Variables
# Copy this file to .env and fill in your values

# Database
# PostgreSQL connection string for shop module
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shop_module

# Core Backend URL
# URL of the core backend API for SDK calls
CORE_API_URL=http://localhost:8000
CORE_API_KEY=

# Server Configuration
HOST=0.0.0.0
PORT=8001

# CORS Configuration
CORS_ORIGINS=http://localhost:5000,http://localhost:7000,http://localhost:7001

# Environment
ENVIRONMENT=development

# Redis (Optional - for caching, queues, etc.)
# REDIS_URL=redis://localhost:6379/1

# JWT Secret (for module internal JWT verification)
# Should match core backend JWT_SECRET_KEY
SECRET_KEY=your-secret-key-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Payments (mock for local dev)
PAYMENTS_MODE=mock

# AI (mock for local dev)
AI_MODE=mock
AI_API_KEY=

# SEO
SEO_ENABLED=true

# Licensing
LICENSE_SYNC_INTERVAL=300
